{
  "appId": "com.dj.spotify-playlist-manager",
  "productName": "Spotify Playlist Manager",
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*",
    "node_modules/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "database/schema.sql",
      "to": "database/schema.sql"
    }
  ],
  "mac": {
    "category": "public.app-category.music",
    "target": [
      "dmg",
      "zip"
    ],
    "icon": "build/icon.icns"
  },
  "win": {
    "target": [
      "nsis",
      "portable"
    ],
    "icon": "build/icon.ico"
  },
  "linux": {
    "target": [
      "AppImage",
      "deb"
    ],
    "category": "Audio",
    "icon": "build/icon.png"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
